<!DOCTYPE html>
<html>
  <head>
  {% block head %}
    <meta charset="{{ encoding | default("UTF-8") }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  
    <link rel="stylesheet" href="/static/style.css">
  
    {% if feedurl %}
      <link rel="alternate" type="application/atom+xml" href="{{ feedurl }}" title="{{ metadata.title }}">
    {% endif %}
  
    <title>{% block title %}{{ metadata.title }}{% endblock %}</title>
  {% endblock %}
</head>
<body>
  <aside>
    {% if theme.sidebar.photo %}
      <img class="photo" src="{{ theme.sidebar.photo }}">
    {% endif %}

    {% if theme.sidebar.about %}
      <span class="about">{{ theme.sidebar.about }}</span>
    {% endif %}

    <div class="nav-wrapper">
    <nav>
      {% for name, url in theme.get('navigation', []) %}
        <span><a href="{{ url }}">{{ name }}</a></span>
      {% endfor %}
    </nav>
    </div>
  </aside>

  <main>
    {% block content %}
    {% endblock %}
  </main>
</body>
