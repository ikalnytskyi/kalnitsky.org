{% extends '_base.j2' %}

{% block content %}
  <h1 class="section">Archives</h1>

  {% for post in item['items']|sort(attribute='published', reverse=True) %}
    <div class="index-entry">
      <time datetime="{{ post.published.isoformat() }}">
        {{ post.published.strftime('%Y-%m-%d') }}
      </time>
      <a href="{{ post.url }}">{{ post.title }}</a>
    </div>
  {% endfor %}
{% endblock %}
